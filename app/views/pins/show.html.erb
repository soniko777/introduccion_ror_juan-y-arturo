<p id="notice"><%= notice %></p>
<div class="container">
  <div class="card-group">
    <div class="card">

      <p>
        <strong>Nombre:</strong>
        <%= @pin.name %>
      </p>


      <p>
        <strong>Photo:</strong>
        <%= image_tag(@pin.photo, :style => 'width:500px') %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @pin.description %>
      </p>

      <%= link_to 'Edit', edit_pin_path(@pin) %> | <%= link_to 'Back', pins_path %>

    </div>

  </div> <br />

  <%= link_to "Mas pins del mismo usuario", pinsof_path(@pin.user.id)%>
</div>

<script type="text/javascript">
  var $container = $('#container');
  //initialize
  $container.masonry({
    columnWidth: 200,
    itemSelector: '.item'
  });
  $(window).load(function () {
    var $container = $('#container');
    $container.masonry({
      columnWidth: 200,
      itemSelector: '.item'
    });
  })
</script>